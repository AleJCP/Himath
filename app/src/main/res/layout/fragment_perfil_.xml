<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil_Fragment">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whithe"
        tools:context=".MainActivity"
        android:fillViewport="true"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contenedor_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

            <!-- Texto PERFIL -->

            <LinearLayout
                android:id="@+id/texto_perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfil"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        <!-- Container PERFIL -->

            <LinearLayout
                android:id="@+id/contenedor_perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="horizontal"
                android:background="@drawable/shop_button_bg"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/texto_perfil"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_user"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:text="¡Bienvenido"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="16dp"/>
                <TextView
                    android:id="@+id/inputName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Usuario!"
                    android:hint="Usuario!"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnEditName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="editar"
                        android:textColor="@color/whithe"
                        android:background="@drawable/bg_round_button"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="16dp"/>
                </LinearLayout>

            </LinearLayout>



            <!-- Texto  LOGROS-->

            <LinearLayout
                android:id="@+id/texto_logros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contenedor_perfil">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logros"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:textSize="20sp"
                    android:layout_gravity="center"/>
            </LinearLayout>


            <!-- Container Logro1-->
        <LinearLayout
            android:id="@+id/logro1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal"
            android:background="@drawable/shop_button_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/texto_logros"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >
                <ImageView
                    android:id="@+id/logro1_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_money_bag_disabled"
                    android:layout_gravity="center"
                    />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                 <TextView
                     android:id="@+id/tv_logro1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-??????????"
                    android:textSize="20sp"
                     android:layout_marginLeft="16dp"/>
                <TextView
                    android:id="@+id/tv_logro1_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obtén 500 Monedas"
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"/>
                </LinearLayout>
        </LinearLayout>

        <!-- Container Logro2-->
        <LinearLayout
            android:id="@+id/logro2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal"
            android:background="@drawable/shop_button_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logro1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            >
            <ImageView
                android:id="@+id/logro2_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_star_disabled"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/tv_logro2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-??????????"
                    android:textSize="20sp"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:id="@+id/tv_logro2_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juega 20 niveles en cualquier dificultad"
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>


        <!-- Container Logro3-->
        <LinearLayout
            android:id="@+id/logro3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal"
            android:background="@drawable/shop_button_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logro2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            >
            <ImageView
                android:id="@+id/logro3_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_maths_disabled"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/tv_logro3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-??????????"
                    android:textSize="20sp"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:id="@+id/tv_logro3_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completa 20 Niveles en Dificil"
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Container Logro4-->




        <!-- Margen Inferior,
            Recuerda Hacer el Constraint con el ultimo elemento del SCROLL o DEL FRAME-->

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/whithe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logro3"
            />








    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</FrameLayout>