<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/whithe"
    android:padding="15dp">

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tienes"
        android:textColor="@color/TextPrimary"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/quantityofproduct_COFRE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:text="5"
        android:textColor="@color/TextPrimary"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageofproduct"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_tesoro_closed" />

</LinearLayout>
    <LinearLayout
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Tienes"
            android:textColor="@color/TextPrimary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/quantityofproduct_LLAVES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="10"
            android:textColor="@color/TextPrimary"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_key" />




    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Qué deseas hacer?"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="10dp">

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_button"
            android:textColor="@color/whithe"
            android:text="Regresar"
            android:padding="15dp"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/btnAbrirCofre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_button"
            android:textColor="@color/whithe"
            android:text="Abrir Cofre"
            android:padding="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>



    </LinearLayout>
</LinearLayout>
